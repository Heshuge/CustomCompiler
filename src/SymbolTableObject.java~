import java.util.ArrayList;
import java.util.HashMap;

/**
 * 
 */

/**
 * @author ther81isbak
 *
 */
public class SymbolHash {
	private String scope; 
	private ArrayList<Symbol> symbolList = new ArrayList<Symbol>();
	private HashMap<String, String> variableNameHashMap = new HashMap<String, String>();

	public SymbolHash(String scope) {
		this.scope = scope;
	}

	public String getSymbolTableScope() {
		return this.scope;
	}

	public void newSymbol(String type, String name, String value) {
		String[] varNameArray = name.split(",");
		for(int i = 0; i < varNameArray.length; i++) {
			if(!variableNameHashMap.containsKey(varNameArray[i].trim())) {
				symbolList.add(new Symbol(varNameArray[i].trim(), type, value));
				variableNameHashMap.put(varNameArray[i].trim(), type);
			}
			else {
				System.out.println("DECLARATION ERROR " + name);
			}
		}
	}

	public void printHashSymbols() {
		System.out.println("Symbol table " + scope);
		for(int i = 0; i < symbolList.size(); i++) {
			Symbol tempSymbol = symbolList.get(i);
			tempSymbol.printOutput();
		}
		System.out.println();
	}

}
